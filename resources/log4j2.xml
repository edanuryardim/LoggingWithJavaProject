<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="ABC" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
	  <Logger name="rvcdemo1" level="trace" additivity="false">
		  <AppenderRef ref="ABC"  />
		   
	  </Logger>
    <Root level="trace">
      <AppenderRef ref="ABC"/>
    </Root>
  </Loggers>
</Configuration>